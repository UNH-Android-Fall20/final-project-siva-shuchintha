<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.ChatMessagesFragment"
    >

        <EditText
            android:id="@+id/addMessage_editText"
            android:layout_width="292dp"
            android:layout_height="38dp"
            android:layout_below="@+id/Chat_messages_RecyclerView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="106dp"
            android:layout_marginBottom="6dp"
            android:hint="message..." />

        <Button
            android:id="@+id/save_message_button"
            android:layout_width="69dp"
            android:layout_height="36dp"
            android:layout_below="@+id/Chat_messages_RecyclerView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="318dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="5dp"
            android:text="Save" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Chat_messages_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="545dp" />
    </RelativeLayout>
