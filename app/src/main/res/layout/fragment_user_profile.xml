<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.UserProfileFragment">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <TextView
            android:id="@+id/numberofPosts_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="257dp"
            android:layout_marginEnd="330dp"
            android:text="0" />

        <TextView
            android:id="@+id/numberofFollowers_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="255dp"
            android:layout_marginEnd="236dp"
            android:text="0" />

        <TextView
            android:id="@+id/numberofFollowing_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="254dp"
            android:layout_marginEnd="118dp"
            android:text="0" />

        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="291dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="9dp"
            android:text="Edit Profile" />

        <ImageView
            android:id="@+id/ProfileImage_Imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="198dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/UserName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="62dp"
            android:text="USERNAME"
            android:textAlignment="center"
            android:textSize="50px" />

        <TextView
            android:id="@+id/FullName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/UserName_textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="144dp"
            android:layout_marginEnd="74dp"
            android:text="FullName"
            android:textAlignment="center"
            android:textSize="50px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="235dp"
            android:layout_marginEnd="318dp"
            android:text="Posts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Bio_textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="235dp"
            android:layout_marginEnd="212dp"
            android:layout_marginBottom="36dp"
            android:text="Followers" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="234dp"
            android:layout_marginEnd="92dp"
            android:text="Following" />

        <TextView
            android:id="@+id/Bio_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="291dp"
            android:layout_marginEnd="0dp"
            android:text="UserBio......"
            android:textAlignment="center"
            android:textSize="50px" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/post_comments_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/CurrentaddComment_editText"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp" />
    </RelativeLayout>


</FrameLayout>