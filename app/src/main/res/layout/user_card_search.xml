<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp"
    android:theme="@style/Theme.MaterialComponents.Light"
    app:strokeColor="@color/colorAccent"
    app:cardElevation="2dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

        <ImageView
            android:id="@+id/other_user_profile_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/other_username_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/other_user_profile_image"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:text="user name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/other_fullname_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/other_username_textView"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:text="user profile name"
            android:textSize="14sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>